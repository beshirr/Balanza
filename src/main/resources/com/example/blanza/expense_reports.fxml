<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blanza.ExpenseReportsController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label text="Expense Reports" styleClass="title">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <Label text="Time Period:" />
                  <ComboBox fx:id="periodComboBox" prefWidth="150.0" />
                  <Button onAction="#handleRefresh" text="Refresh" />
               </children>
            </HBox>
            
            <TabPane prefHeight="450.0" prefWidth="780.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Category Breakdown">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                         <children>
                            <PieChart fx:id="categoryPieChart" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                         </children>
                    </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Monthly Spending">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                         <children>
                            <BarChart fx:id="monthlyBarChart" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                              <xAxis>
                                <CategoryAxis side="BOTTOM" label="Date" />
                              </xAxis>
                              <yAxis>
                                <NumberAxis label="Amount" side="LEFT" />
                              </yAxis>
                            </BarChart>
                         </children>
                    </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Payment Methods">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                         <children>
                            <PieChart fx:id="paymentMethodPieChart" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                         </children>
                    </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
            
            <HBox spacing="10.0">
               <children>
                  <Label text="Total Expenses:" />
                  <Label fx:id="totalExpensesLabel" text="\$0.00" />
               </children>
            </HBox>
            
            <Button fx:id="backButton" onAction="#handleBack" text="Back to Expenses" />
         </children>
      </VBox>
   </children>
</AnchorPane>