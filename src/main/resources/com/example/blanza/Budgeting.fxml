<?xml version="1.0" encoding="UTF-8"?>
<?import java.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.blanza.BudgetingTrackingController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="page-background"
            stylesheets="@css/style.css">

    <!-- Page Title -->
    <Label text="Budget Tracker" 
           AnchorPane.leftAnchor="50.0" 
           AnchorPane.topAnchor="30.0"
           styleClass="page-title"/>

    <!-- Budget Category Label and TextField -->
    <Label text="Budget Category:" 
           AnchorPane.leftAnchor="200.0" 
           AnchorPane.topAnchor="100.0"
           styleClass="stat-label"/>
           
    <TextField fx:id="categoryField" 
               promptText="Enter budget category"
               AnchorPane.leftAnchor="350.0" 
               AnchorPane.topAnchor="100.0" 
               prefWidth="250.0"
               styleClass="text-field"/>

    <!-- Budget Amount Label and TextField -->
    <Label text="Budget Amount:" 
           AnchorPane.leftAnchor="200.0" 
           AnchorPane.topAnchor="150.0"
           styleClass="stat-label"/>
           
    <TextField fx:id="budgetAmountField" 
               promptText="Enter budget amount"
               AnchorPane.leftAnchor="350.0" 
               AnchorPane.topAnchor="150.0" 
               prefWidth="250.0"
               styleClass="text-field"/>

    <!-- Save Budget Button -->
    <Button text="Save Budget" 
            fx:id="saveButton"
            AnchorPane.leftAnchor="350.0" 
            AnchorPane.topAnchor="200.0" 
            prefWidth="120.0"
            onAction="#handleSaveBudget"
            styleClass="primary-button"/>

    <!-- Display Budgets Button -->
    <Button text="Display Budgets" 
            fx:id="displayBudgetsButton"
            AnchorPane.leftAnchor="480.0" 
            AnchorPane.topAnchor="200.0" 
            prefWidth="120.0"
            onAction="#handleDisplayBudgets"
            styleClass="secondary-button"/>

    <!-- VBox to display all budgets -->
    <VBox fx:id="budgetsVBox" 
          spacing="10.0" 
          AnchorPane.leftAnchor="200.0" 
          AnchorPane.topAnchor="250.0"
          prefWidth="400.0"
          styleClass="list-container">
        <!-- Dynamically populated with budgets -->
    </VBox>

    <!-- Update Budget Section -->
    <Label text="Update Budget" 
           fx:id="h"
           AnchorPane.leftAnchor="200.0" 
           AnchorPane.topAnchor="370.0"
           styleClass="section-title"/>

    <Label text="Enter Budget Category for Update:" 
           fx:id="updateCategoryLabel"
           AnchorPane.leftAnchor="200.0" 
           AnchorPane.topAnchor="410.0" 
           visible="false"
           styleClass="stat-label"/>
           
    <TextField fx:id="updateCategoryField" 
               promptText="Enter category to update"
               AnchorPane.leftAnchor="430.0" 
               AnchorPane.topAnchor="410.0" 
               prefWidth="170.0" 
               visible="false"
               styleClass="text-field"/>

    <Label text="Enter Actual Spend to Update:" 
           fx:id="updateActualSpendLabel"
           AnchorPane.leftAnchor="200.0" 
           AnchorPane.topAnchor="450.0" 
           visible="false"
           styleClass="stat-label"/>
           
    <TextField fx:id="updateActualSpendField" 
               promptText="Enter actual spend"
               AnchorPane.leftAnchor="430.0" 
               AnchorPane.topAnchor="450.0" 
               prefWidth="170.0" 
               visible="false"
               styleClass="text-field"/>

    <!-- Update Budget Button -->
    <Button text="Update" 
            fx:id="updateBudgetButton"
            AnchorPane.leftAnchor="350.0" 
            AnchorPane.topAnchor="500.0" 
            prefWidth="120.0"
            onAction="#handleUpdateBudget"
            styleClass="primary-button"/>

    <!-- Back to Home Button -->
    <Button text="Back to Home" 
            fx:id="backButton"
            AnchorPane.leftAnchor="480.0" 
            AnchorPane.topAnchor="500.0" 
            prefWidth="120.0"
            onAction="#handleBack"
            styleClass="navigation-button"/>

    <!-- Remaining Budget Label (referenced in controller) -->
    <Label fx:id="remainingBudgetLabel" 
           text="Remaining Budget: 0.0"
           AnchorPane.leftAnchor="350.0" 
           AnchorPane.topAnchor="320.0"
           styleClass="card-value"/>

</AnchorPane>