<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.blanza.BudgetingTrackingController"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="Budget Category:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
    <TextField fx:id="categoryField" promptText="Enter budget category" AnchorPane.leftAnchor="120.0"
               AnchorPane.topAnchor="20.0" prefWidth="200.0"/>

    <Label text="Budget Amount:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="60.0"/>
    <TextField fx:id="budgetAmountField" promptText="Enter budget amount"
               AnchorPane.leftAnchor="120.0" AnchorPane.topAnchor="60.0" prefWidth="200.0"/>

    <Button text="Save Budget" fx:id="saveButton"
            AnchorPane.leftAnchor="120.0" AnchorPane.topAnchor="100.0" onAction="#handleSaveBudget"/>

    <Label fx:id="remainingBudgetLabel" text="Remaining Budget: 0.0"
           AnchorPane.leftAnchor="120.0" AnchorPane.topAnchor="140.0"/>

    <Button text="Back to Home" fx:id="backButton"
            AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="100.0" onAction="#handleBack"/>


</AnchorPane>
